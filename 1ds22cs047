#include <stdio.h>

// Function prototype
int add(int num1, int num2);

int main() {
    int num1, num2, sum;

    // Ask the user to input two numbers
    printf("Enter first number: ");
    scanf("%d", &num1);

    printf("Enter second number: ");
    scanf("%d", &num2);

    // Call the function add and store the returned value in the variable sum
    sum = add(num1, num2);

    // Print the result
    printf("The sum of %d and %d is: %d\n", num1, num2, sum);

    return 0;
}

// Function definition
int add(int num1, int num2) {
    // Add the numbers and return the result
    return num1 + num2;
}
